<div class="position-relative">
  <div class="card-category card-large">
   <h5><%= @dress.title %></h5>
    <p><%= @dress.description %></p>
     <p>size: <%= @dress.size %></p>
      <p>color: <%= @dress.color %></p>
     <p>category: <%= @dress.category %></p>
   <p>price: <%= @dress.price_per_day %></p>

  </div>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><em class="text-muted">
      <%= "You haven't saved any dresses yet!" if @dress.title.empty? %>
    </em></span>
    <div>
      <%= link_to "delete this dress", "#", class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this dress?" } %>
    </div>
  </div>


  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @dress.reviews.empty? %>
        <small><em class="text-muted">Be the first one to review this dress</em></small>
      <% end %>

      <% @dress.reviews.each do |review| %>
        <div>
          <% review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <%= review.content %>
        </div>
        <hr>
      <% end %>
    </div>

    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
        <h5>Add your review</h5>
        <%= simple_form_for [@dress, @review] do |f| %>
          <%= f.input :content, placeholder: "Add your review here..." %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
          <%= f.submit class: "btn btn-flat mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
