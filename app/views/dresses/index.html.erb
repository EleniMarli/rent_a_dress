<h3>All available dresses</h3>

<ul>
<% @dresses.each do |dress| %>
  <% if @user != dress.user %>
    <li>
    <h5>Title: <%= dress.title %> </h5>
    <h5>Description: <%= dress.description %> </h5>
    <h5>Size: <%= dress.size %> </h5>
    <h5>Color: <%= dress.color %> </h5>
    <h5>Category: <%= dress.category %> </h5>
    <h5>Price: <%= dress.price_per_day %>/day</h5>
    <h5>Owner: <%= dress.user.name%> </h5>
    </li>
  <%end%>
<%end%>
</ul>
